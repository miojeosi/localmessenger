<Window x:Class="LocalMessenger.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Вход" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Имя пользователя:" Grid.Row="0" Grid.Column="0" Margin="10,0,10,10"/>
        <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1" Margin="10,10,10,10"/>
        <RadioButton x:Name="rbCreateChat" Grid.Column="0" Content="Создать новый чат" Margin="10,10,10,18" Grid.Row="1"/>
        <RadioButton x:Name="rbJoinChat" Grid.Row="2" Grid.Column="0" Content="Присоединиться к существующему чату" Margin="10,9,10,10"/>
        <Label x:Name="lblIpAddress" Content="IP Address:" Grid.Row="3" Grid.Column="0" Margin="10,17,10,16"/>
        <TextBox x:Name="txtIpAddress" Grid.Row="3" Grid.Column="1" Margin="10,14,10,13"/>
        <Button Content="Присоединиться" Grid.Row="4" Grid.Column="0" Click="Connect_Click" Grid.ColumnSpan="2" Margin="10,18,10,18"/>
    </Grid>
</Window>
